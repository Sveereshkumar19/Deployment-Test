name: OrgCreation
on:
  pull_request:
    branches: master
jobs:
    scratch-org-test:
      runs-on: ubuntu-latest
      if: ${{ github.actor != 'dependabot[bot]' }}
      steps:
        - name: Checkout source code
          uses: actions/checkout@v2
        - name: Install Salesforce CLI
          run: >
            wget
            https://developer.salesforce.com/media/salesforce-cli/sfdx/channels/stable/sfdx-linux-x64.tar.xz

            mkdir ~/sfdx

            tar xJf sfdx-linux-x64.tar.xz -C ~/sfdx --strip-components 1

            echo "$HOME/sfdx/bin" >> $GITHUB_PATH

            ~/sfdx/bin/sfdx version
		- bash:
               sfdx config:set restDeploy=false --global
        displayName: Set SOAP API Deployment
        - bash:
               sfdx force:auth:jwt:grant --client-id $(SIT_Client_Id) --jwt-key-file ./bin/server.key --username $(SIT_Username) --instance-url $(SIT_Instance_Url)
        displayName: Authorize Salesforce SIT Org
        - bash:
               sfdx force:apex:test:run --test-level RunLocalTests --wait -20 --target-org $(SIT_Username)
        displayName: Run Apex Test
        - bash:
               sfdx force:source:deploy -x manifest/package.xml -u $(SIT_Username)
        displayName: Deploying To SIT Enivornment
