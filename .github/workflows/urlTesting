name: URLTesting
on:
  pull_request:
    branches: master
jobs:
  build:
  
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/checkout@v2
      - uses: sfdx-actions/setup-sfdx@v1
        with:
          sfdx-auth-url: ${{ secrets.PRIVATE_AUTH_SECRET }}
      - name: sfdx-test-run
	      run: sfdx force:apex:test:run -l RunLocalTests -w 30
